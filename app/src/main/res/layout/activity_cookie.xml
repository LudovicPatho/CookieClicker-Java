<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/titre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorText"
        android:textSize="50dp"
        android:fontFamily="cursive"
        android:text="@string/brand"
        android:layout_gravity="center"
        android:layout_marginTop="60dp" />

    <ImageView
        android:id="@+id/cookie"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/cookie"
        android:layout_marginTop="60dp"
        android:layout_gravity="center"  />


    <TextView
        android:id="@+id/points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorText"
        android:fontFamily="cursive"
        android:textSize="20dp"
        android:text="@string/points"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"/>


    <TextView
        android:id="@+id/clickmulti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorText"
        android:fontFamily="sans-serif"
        android:textSize="12dp"

        android:text=""
        android:layout_gravity="center"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="0dp"/>


    <ImageView
        android:id="@+id/pointer"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src = "@drawable/click"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/msgmulti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorText"
        android:fontFamily="cursive"
        android:textSize="20dp"
        android:text="Appuyez ici pour acheter un bonus"
        android:layout_gravity="center"
        android:layout_marginTop="-60dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/msgmulti2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorText"
        android:fontFamily="sans-serif"
        android:textSize="12dp"
        android:text="1 clique compte pour 2 clicks, coût : 25 points"
        android:layout_gravity="center"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="20dp"/>

    <ImageView
        android:id="@+id/autoclick"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/reapeat"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/msgautoclick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorText"
        android:fontFamily="cursive"
        android:textSize="20dp"
        android:text="Appuyez ici pour acheter un bonus"
        android:layout_gravity="center"
        android:layout_marginTop="-60dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/msgautoclick2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorText"
        android:fontFamily="sans-serif"
        android:textSize="12dp"
        android:text="Auto-Click : 1 par seconde , côut : 500"
        android:layout_gravity="center"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="0dp"/>





</LinearLayout>